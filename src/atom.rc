// SP3 JOYSTICK SUPPORT

            MENUITEM "PORTB",           IDM_JOYSTICK

// END SP3

// SP10 KEYBOARDJOYSTICK SUPPORT

            MENUITEM "Keyboard matrix", IDM_KEYJOYSTICK
        END
// END SP10

    END
    POPUP "&Misc"
    BEGIN
        POPUP "&Speed"
        BEGIN
            MENUITEM "10%",  IDM_SPD_10
            MENUITEM "25%",  IDM_SPD_25
            MENUITEM "50%",  IDM_SPD_50
            MENUITEM "75%",  IDM_SPD_75
            MENUITEM "100%", IDM_SPD_100
            MENUITEM "150%", IDM_SPD_150
            MENUITEM "170%", IDM_SPD_170
