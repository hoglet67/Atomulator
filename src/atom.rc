MainMenu MENU DISCARDABLE
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&Reset", IDM_FILE_RESET
        MENUITEM "E&xit",  IDM_FILE_EXIT
    END
    POPUP "&Tape"
    BEGIN
        MENUITEM "&Load tape...",        IDM_TAPE_LOAD
        MENUITEM SEPARATOR
        MENUITEM "&Eject tape",          IDM_TAPE_EJECT
        MENUITEM SEPARATOR
        MENUITEM "&Rewind tape",         IDM_TAPE_REW
        MENUITEM "Show tape &catalogue", IDM_TAPE_CAT
        POPUP "&Tape speed"
        BEGIN
            MENUITEM "Normal", IDM_TAPES_NORMAL
            MENUITEM "Fast",   IDM_TAPES_FAST
        END
    END
    POPUP "&Disc"
    BEGIN
        MENUITEM "Load disc :&0/2...",      IDM_DISC_LOAD_0
        MENUITEM "Load disc :&1/3...",      IDM_DISC_LOAD_1
        MENUITEM SEPARATOR
        MENUITEM "Eject disc :0/2",         IDM_DISC_EJECT_0
        MENUITEM "Eject disc :1/3",         IDM_DISC_EJECT_1
        MENUITEM SEPARATOR
        MENUITEM "New disc :0/2",           IDM_DISC_NEW_0
        MENUITEM "New disc :1/3",           IDM_DISC_NEW_1
        MENUITEM SEPARATOR
        MENUITEM "Write protect disc :0/2", IDM_DISC_WPROT_0
        MENUITEM "Write protect disc :1/3", IDM_DISC_WPROT_1
        MENUITEM SEPARATOR
        MENUITEM "Default write protect",   IDM_DISC_WPROT_D
    END
    POPUP "&Settings"
    BEGIN
        POPUP "&Video"
        BEGIN
            MENUITEM "&Snow",               IDM_VID_SNOW
            MENUITEM "&Fullscreen",         IDM_VID_FULLSCREEN
            MENUITEM "&Colour Board",       IDM_VID_COLOUR
            MENUITEM "&PAL (50Hz)",         IDM_VID_PALNOTNTSC
        END
        POPUP "&Hardware"
        BEGIN
            MENUITEM "&BBC BASIC",          IDM_HARD_BBC
        END
        POPUP "&RamRom"
        BEGIN
            MENUITEM "&RAM/ROM Enabled",         IDM_RAMROM_ENABLE
            MENUITEM "&RAM/ROM Diskrom Enabled", IDM_RAMROM_DISKROM
        END
        POPUP "&R&am"
        BEGIN
            POPUP "&Main RAM"
            BEGIN
                MENUITEM "Minimum 1K in base",                                    IDM_MAIN_RAM+0
                MENUITEM "Minimum 1K in base + 5K",                               IDM_MAIN_RAM+1
                MENUITEM "6K on motherboard + 3K DOS",                            IDM_MAIN_RAM+2
                MENUITEM "6K motherboard + 3K DOS + 16K expansion",               IDM_MAIN_RAM+3
                MENUITEM "6K motherboard + 3K DOS + 22K expansion (hole at A00)", IDM_MAIN_RAM+4
                MENUITEM "6K motherboard + 3K DOS + 23K expansion",               IDM_MAIN_RAM+5
            END
            POPUP "&Video RAM"
            BEGIN
                MENUITEM "1K Video RAM", IDM_VIDEO_RAM+0
                MENUITEM "2K Video RAM", IDM_VIDEO_RAM+1
                MENUITEM "3K Video RAM", IDM_VIDEO_RAM+2
                MENUITEM "4K Video RAM", IDM_VIDEO_RAM+3
                MENUITEM "5K Video RAM", IDM_VIDEO_RAM+4
                MENUITEM "6K Video RAM", IDM_VIDEO_RAM+5
                MENUITEM "7K Video RAM", IDM_VIDEO_RAM+6
                MENUITEM "8K Video RAM", IDM_VIDEO_RAM+7
            END
        END
        POPUP "&Floppy"
        BEGIN
            MENUITEM "&GDOS/ADOS 2015 (1770 based) Enabled", IDM_GDOS2015_ENABLE
            POPUP "&Rombank"
            BEGIN
                MENUITEM "Bank 00", IDM_GDOS_BANK+0
                MENUITEM "Bank 01", IDM_GDOS_BANK+1
                MENUITEM "Bank 02", IDM_GDOS_BANK+2
                MENUITEM "Bank 03", IDM_GDOS_BANK+3
                MENUITEM "Bank 04", IDM_GDOS_BANK+4
                MENUITEM "Bank 05", IDM_GDOS_BANK+5
                MENUITEM "Bank 06", IDM_GDOS_BANK+6
                MENUITEM "Bank 07", IDM_GDOS_BANK+7
                MENUITEM "Bank 08", IDM_GDOS_BANK+8
                MENUITEM "Bank 09", IDM_GDOS_BANK+9
                MENUITEM "Bank 10", IDM_GDOS_BANK+10
                MENUITEM "Bank 11", IDM_GDOS_BANK+11
                MENUITEM "Bank 12", IDM_GDOS_BANK+12
                MENUITEM "Bank 13", IDM_GDOS_BANK+13
                MENUITEM "Bank 14", IDM_GDOS_BANK+14
                MENUITEM "Bank 15", IDM_GDOS_BANK+15
            END
        END
        POPUP "&Sound"
        BEGIN
            MENUITEM "&Internal speaker", IDM_SOUND_ATOM
            MENUITEM "&AtomSID",          IDM_SOUND_ATOMSID
            MENUITEM "&Tape noise",       IDM_SOUND_TAPE
            MENUITEM "&Disc drive noise", IDM_SOUND_DDNOISE
            MENUITEM SEPARATOR
            POPUP "&reSID configuration"
            BEGIN
                POPUP "&Model"
                BEGIN
                    MENUITEM "6581",                     IDM_SID_TYPE+SID_MODEL_6581
                    MENUITEM "8580",                     IDM_SID_TYPE+SID_MODEL_8580
                    MENUITEM "8580 + digi boost",        IDM_SID_TYPE+SID_MODEL_8580D
                    MENUITEM "6581R4",                   IDM_SID_TYPE+SID_MODEL_6581R4
                    MENUITEM "6581R3 4885",              IDM_SID_TYPE+SID_MODEL_6581R3_4885
                    MENUITEM "6581R3 0486S",             IDM_SID_TYPE+SID_MODEL_6581R3_0486S
                    MENUITEM "6581R3 3984",              IDM_SID_TYPE+SID_MODEL_6581R3_3984
                    MENUITEM "6581R4AR 3789",            IDM_SID_TYPE+SID_MODEL_6581R4AR_3789
                    MENUITEM "6581R3 4485",              IDM_SID_TYPE+SID_MODEL_6581R3_4485
                    MENUITEM "6581R4 1986S",             IDM_SID_TYPE+SID_MODEL_6581R4_1986S
                    MENUITEM "8580R5 3691",              IDM_SID_TYPE+SID_MODEL_8580R5_3691
